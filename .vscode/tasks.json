{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/build",
                "-S",
                "${workspaceFolder}",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ],
            "dependsOn": "CMake: Configure"
        },
        {
            "label": "CMake: Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ]
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "clean"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Rebuild",
            "type": "shell",
            "dependsOn": [
                "CMake: Clean",
                "CMake: Build Debug"
            ],
            "group": "build",
            "problemMatcher": []
        },
                {
            "label": "compile_controller",
            "type": "shell",
            "command": "C:/Program Files/Microsoft Visual Studio/2022/Community/MSBuild/Current/Bin/MSBuild.exe",
            "args": [
                "${workspaceFolder}/example/pn_driver/src/examples/ioc/test_app/win32/test_app.sln",
                "/p:Configuration=Release",
                "/p:Platform=Win32"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean_controller",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path '${workspaceFolder}/build') { Remove-Item -Path '${workspaceFolder}/build/*' -Recurse -Force -ErrorAction SilentlyContinue; Write-Host 'Build directory cleaned successfully' } else { Write-Host 'Build directory does not exist' }"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "build-controller",
            "dependsOn": ["clean_controller", "compile_controller"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}